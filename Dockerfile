#################################---FROM---#####################################

FROM ubuntu

################################################################################

#################################---ENV---######################################

ENV DEBIAN_FRONTEND=noninteractive

################################################################################

################################---BUILD---#####################################

RUN apt-get update; \
    apt-get install -y openssl \
      build-essential \
      xmlsec1 \
      libssl-dev \
      python3 \
      python3-pip; \
    apt-get clean

RUN pip3 install -U pip flask

################################################################################

################################---EXPOSE---####################################

EXPOSE 80

################################################################################

#################################---CMD---######################################

CMD  flask run

################################################################################
